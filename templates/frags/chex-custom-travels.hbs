<div class="form-group">
    <label>
        {{localize "CHEX.CUSTOMIZER.Id"}}
        <input type="text" name="travels.{{id}}.id" value="{{id}}">
    </label>
    <label>
        {{localize "CHEX.CUSTOMIZER.Label"}}
        <input type="text" name="travels.{{id}}.label" value="{{this.label}}">
    </label>
    <label>
        {{localize "CHEX.CUSTOMIZER.Multiplier"}}
        <input type="number" name="travels.{{id}}.multiplier" value="{{this.multiplier}}">
    </label>
    <label>
        {{localize "CHEX.CUSTOMIZER.Color"}}
        <input type="color" name="travels.{{id}}.color" value="{{this.color}}">
    </label>
    <label>
        {{localize "CHEX.CUSTOMIZER.Special"}}
        <input type="checkbox" name="travels.{{id}}.special" {{checked this.special}}>
    </label>
    <button data-tooltip="CHEX.HEXEDIT.Delete" type="button" class="fa-solid fa-times chex-delete" data-action="delete"/>
</div>