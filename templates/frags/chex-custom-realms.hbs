<div class="form-group">
    <label>
        {{localize "CHEX.CUSTOMIZER.Id"}}
        <input type="text" name="realms.{{id}}.id" value="{{id}}">
    </label>
    <label>
        {{localize "CHEX.CUSTOMIZER.Label"}}
        <input type="text" name="realms.{{id}}.label" value="{{this.label}}">
    </label>
    <label>
        {{localize "CHEX.CUSTOMIZER.Color"}}
        <input type="color" name="realms.{{id}}.color" value="{{this.color}}">
    </label>
    <button data-tooltip="CHEX.HEXEDIT.Delete" type="button" class="fa-solid fa-times chex-delete" data-action="delete"/>
</div>